<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Define the background properties like color etc -->
    <item android:id="@android:id/background">
        <shape>
            <gradient
                android:startColor="@color/colorLightWhite"
                android:centerColor="@color/colorLightWhite"
                android:centerY="1.0"
                android:endColor="@color/colorLightWhite"
                android:angle="270"
                />
            <stroke
                android:width="@dimen/progressbar.border.single_border"
                android:color="@color/colorLightGray" />
            <corners android:radius="@dimen/progressbar.corner.medium_radius" />
        </shape>
    </item>

    <!-- Define the progress properties like start color, end color etc -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:startColor="@color/colorGreen"
                    android:centerColor="@color/colorGreen"
                    android:centerY="1.0"
                    android:endColor="@color/colorLightWhite"
                    android:angle="270"
                    />
                <stroke
                    android:width="@dimen/progressbar.border.single_border"
                    android:color="@color/colorLightGray" />
                <corners android:radius="@dimen/progressbar.corner.medium_radius" />
            </shape>
        </clip>
    </item>

</layer-list>