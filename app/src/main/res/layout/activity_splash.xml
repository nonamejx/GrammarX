<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorDarkPurple">

    <TextView
        android:id="@+id/tvAppName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/splashScreen.textView.appName.textSize"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvLoadDataStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:padding="@dimen/default_padding"
        android:text="@string/splashScreen.loadStatus"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/splashScreen.textView.loadStatus.textSize"
        android:visibility="gone" />

</RelativeLayout>