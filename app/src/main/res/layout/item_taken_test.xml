<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/default_margin"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_rounded_layout_background_top"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvTestTitle"
                style="@style/item_newTest_textView_testTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical" />

            <ImageView
                android:layout_width="@dimen/imageView.default.width"
                android:layout_height="@dimen/imageView.default.height"
                android:layout_margin="@dimen/default_margin"
                android:scaleType="fitXY"
                android:src="@drawable/ic_tick" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvTotalQuestion"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/default_padding"
                android:paddingLeft="@dimen/medium_padding" />

            <TextView
                android:id="@+id/tvTestResult"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:paddingBottom="@dimen/default_padding"
                android:paddingRight="@dimen/medium_padding" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        style="@style/item_textView_study"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/ic_right_arrow"
        android:text="@string/item.textView.doTest" />

</LinearLayout>