<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorDarkPurple"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvHeaderTitle"
            style="@style/item_textView_top_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_left_arrow_white"
            android:drawablePadding="@dimen/item.general_header.text_view.drawable_padding" />

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPageResult"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

</ScrollView>
